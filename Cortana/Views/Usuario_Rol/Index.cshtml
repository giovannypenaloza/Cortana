@model IEnumerable<Cortana.Models.usuariorol>

@{
    ViewBag.Title = "Index";
}

<h2>Usuario_Rol</h2>

<p>
    @Html.ActionLink("Crear Un Nuevo Rol", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.roles.descripcion)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.usuario.nombre)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Cortana.Controllers.Usuario_RolController.Descripcion_Rol(item.idUsuario)
            </td>
            <td>
                @Cortana.Controllers.Usuario_RolController.Nombre_Usuario(item.idRol)
            </td>
            <td>
                @Html.ActionLink("Editar", "Edit", new { id = item.id }) |
                @Html.ActionLink("Detalles", "Details", new { id = item.id }) |
                @Html.ActionLink("Eliminar", "Delete", new { id = item.id }, new { @class = "linkDelete" })
            </td>
        </tr>
    }

</table>
@section scripts{
    <script>
        $(".linkDelete").click(function (event) {
            if (!confirm('¿Esta seguro de eliminar?')) {
                event.preventDefault();
            }
        })
    </script>
}
